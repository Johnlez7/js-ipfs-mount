{
  "compileOnSave": true,

  "include": [
    "./**/*.ts"
  ],

  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [ "ES2015", "ES2018.AsyncIterable", "ES2020.BigInt" ],

    "types": [ "node" ],
    "baseUrl": "./",
    "paths": {
      "fuse-native": [ "./types/fuse-native" ],
      "ipfs-http-client": [ "./types/ipfs-http-client" ]
    },

    "outDir": "./dist",
    //"declaration": true,
    //"sourceMap": false,

    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,

    "preserveConstEnums": true
  }
}
